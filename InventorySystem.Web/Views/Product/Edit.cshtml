@model UpdateProductViewModel

<section class="form-section">
    <form asp-controller="Product" asp-action="Edit">
        <input asp-for="Id" value="@Model.Id" hidden/>
        <h1 class="h3 mb-3 fw-normal">Update Product</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
        <div class="form-floating">
            <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
            <label asp-for="Name" class="form-label">Name</label>
        </div>
        <div class="form-floating">
            <input type="number" class="form-control" step="any" asp-for="Price" value="@Model.Price">
            <label asp-for="Price" class="form-label">Price</label>
        </div>
        <div class="form-floating">
            <input class="form-control" asp-for="Description"  value="@Model.Description">
            <label asp-for="Description" class="form-label">Description</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Update</button>
    </form>
</section>